<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Lol.Settings.InGame.UI.Units"
					xmlns:ctrls="clr-namespace:DevNcore.LayoutSupport.Leagueoflegends.Controls;assembly=DevNcore.LayoutSupport.Leagueoflegends">
	
	<Style TargetType="{x:Type units:Items}">
		<Setter Property="Grid.Row" Value="2"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="Margin" Value="0 10 0 0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:Items}">
					<StackPanel Orientation="Horizontal">
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey1}"/>
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey2}"/>
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey3}"/>
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey4}"/>
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey5}"/>
						<ctrls:RiotHotKey Content="{Binding Model.ItemKey6}"/>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>