<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:Lol.Home.UI.Units"
					xmlns:ctrls="clr-namespace:DevNcore.LayoutSupport.Leagueoflegends.Controls;assembly=DevNcore.LayoutSupport.Leagueoflegends">

    <Style TargetType="{x:Type units:AvatarTitle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="30 0 0 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AvatarTitle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="LEAGUE"  FontSize="20" Foreground="White"/>
                            <TextBlock Text="OF" FontSize="10" Margin="5 5 5 0 " Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="LEGENDS" FontSize="20" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="아바타" FontSize="30" Foreground="White"/>
                            <TextBlock Text="생성기" FontSize="30" Foreground="White"/>
                        </StackPanel>
                        <Border Grid.Row="1" BorderThickness="0 0 0 1" BorderBrush="Gold" Width="200"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>